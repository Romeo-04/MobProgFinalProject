<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" 
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp" 
    app:cardElevation="3dp" 
    app:cardBackgroundColor="@color/white"
    android:layout_margin="8dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:padding="16dp">

        <!-- Voucher Icon/Discount Badge -->
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_black_round"
            android:orientation="vertical"
            android:gravity="center">
            
            <TextView 
                android:id="@+id/tvVoucherDiscount" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20% OFF"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-bold"
                android:gravity="center"
                android:maxLines="2"/>
        </LinearLayout>

        <!-- Voucher Details -->
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp">
            
            <TextView 
                android:id="@+id/tvVoucherCode" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PANDOG20"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-bold"/>
            
            <TextView 
                android:id="@+id/tvVoucherDescription" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20% off on all orders"
                android:textSize="14sp"
                android:textColor="@color/gray800"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end"/>
            
            <TextView 
                android:id="@+id/tvVoucherCondition" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Min. order: â‚±100"
                android:textSize="12sp"
                android:textColor="@color/gray500"
                android:layout_marginTop="6dp"/>
            
            <TextView 
                android:id="@+id/tvVoucherExpiry" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valid until Dec 31, 2025"
                android:textSize="12sp"
                android:textColor="@color/gray500"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
