<resources>
    <!-- Dark theme for night mode -->
    <style name="Theme.Pandog" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary/Secondary use black/white palette (inverted for dark mode) -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/gray100</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/gray100</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="colorSurface">@color/gray800</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>
    
    <!-- Base style for Pandog components (required for child styles) -->
    <style name="Pandog" />
</resources>